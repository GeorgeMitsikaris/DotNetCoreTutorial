@model EditUserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

<form method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Id" class="col-2 col-form-label"></label>
        <div class="col-10">
            <input asp-for="@Model.Id" class="form-control" disabled />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-2 col-form-label"></label>
        <div class="col-10">
            <input asp-for="@Model.Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-2 col-form-label"></label>
        <div class="col-10">
            <input asp-for="@Model.UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="City" class="col-2 col-form-label"></label>
        <div class="col-10">
            <input asp-for="@Model.City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListUsers" class="btn btn-danger">Cancel</a>
        </div>
    </div>

    <div class="card my-3">
        <div class="card-header">
            <div class="card-title">User Roles</div>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id" class="btn btn-primary" style="width:auto;">Manage Roles</a>
        </div>
    </div>

    <div class="card my-3">
        <div class="card-header">
            <div class="card-title">User Claims</div>
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                foreach (var claim in Model.Claims)
                {
                    <h5 class="card-title">@claim</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserClaims" asp-route-id="@Model.Id" class="btn btn-primary" style="width:auto;">Manage Claims</a>
        </div>
    </div>
</form>
