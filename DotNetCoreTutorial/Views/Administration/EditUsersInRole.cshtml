@model List<EditUserInRoleViewModel>
@{
    ViewData["Title"] = "EditUsersInRole";
    string roleId = ViewBag.roleId;
}


<form method="post">
    <div class="card">
        <div class="card-header">
            <h1>Edit Users In Role</h1>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <input asp-for="@Model[i].UserId" type="hidden" />
                <input asp-for="@Model[i].UserName" type="hidden" />
                <div class="form-check m-1">
                    <input asp-for="@Model[i].IsInRole" class="form-check-input" />
                    <label asp-for="@Model[i].IsInRole" class="form-check-label">@Model[i].UserName</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto;" />
            <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@roleId" class="btn btn-primary" style="width:auto;">Cancel</a>
        </div>
    </div>
</form>

