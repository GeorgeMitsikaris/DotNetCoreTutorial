@model List<DotNetCoreTutorial.Models.UserRolesViewModel>

@{
    ViewData["Title"] = "Manage User Roles";
}


    <form method="post">
        <div class="card">
            <div class="card-header">
                Manage User Roles
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].RoleName</label>
                    </div>
                }
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary" style="width:auto;">Update</button>
                <a asp-action="EditUser" asp-route-id="@ViewBag.UserId" class="btn btn-primary" style="width:auto;">Cancel</a>
            </div>
        </div>
    </form>