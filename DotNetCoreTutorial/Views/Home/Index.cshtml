@model IEnumerable<Employee>

@{
    ViewBag.Title = "Index";
}


    <div id="employeeCards" class="card-deck">
        @foreach (var employee in Model)
        {
            var photoPath = "~/images/" + (employee.PhotoPath ?? "avatar.jpg");
             <div class="card m-3">
                 <div class="card-header">
                     <h3>@employee.Name</h3>
                 </div>
                 <img src="@photoPath" class="card-img-top imageThumbnail" alt="@employee.Name" asp-append-version="true" />
                 <div class="card-footer text-center">
                     <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                     <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                     <a href="#" class="btn btn-danger m-1">Delete</a>
                 </div>
             </div>
        }
    </div>

@section scripts{ 
    <script src="~/js/CustomScript.js"></script>
}
