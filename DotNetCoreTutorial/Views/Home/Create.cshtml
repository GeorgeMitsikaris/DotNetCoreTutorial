@model DotNetCoreTutorial.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />

<form asp-action="Create" class="mt-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Name" class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Department" class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <select asp-for="Department" asp-items="@Html.GetEnumSelectList<Dept>()" class="form-control">
                    <option value="">Select Department</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-sm-2">
            <input type="submit" value="Create" class="btn btn-primary" style="width:90%;"/>
        </div>
</form>


<div class="col-sm-2">
    <a asp-action="Index" class="btn btn-outline-primary" style="width:90%;">Back to List</a>
</div>

